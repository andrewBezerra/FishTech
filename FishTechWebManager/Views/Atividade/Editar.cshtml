@model FishTechWebManager.Models.Atividade

@{
    ViewData["Title"] = "Editar";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Atividades
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Atividade</a></li>
            @*
            <li><a href="#">Examples</a></li>*@
            <li class="active">Editar</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-4">
                    <form asp-action="Editar">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" class="form-control" />
                        <div class="form-group">
                            <label asp-for="Titulo" class="control-label"></label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Agendamento" class="control-label"></label>
                            <input asp-for="Agendamento" class="form-control" />
                            <span asp-validation-for="Agendamento" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Acao" class="control-label"></label>
                            <input asp-for="Acao" class="form-control" />
                            <span asp-validation-for="Acao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                            <a class="btn btn-info" asp-action="Index">Back to List</a>

                        </div>
                    </form>


                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->