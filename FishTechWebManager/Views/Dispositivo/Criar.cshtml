@model FishTechWebManager.Models.Dispositivo

@{
    ViewData["Title"] = "Criar";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dispositivos
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Dispositivos</a></li>
            @*
                <li><a href="#">Examples</a></li>*@
            <li class="active">Adicionar</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Temperatura" class="control-label"></label>
                        <input asp-for="Temperatura" class="form-control" />
                        <span asp-validation-for="Temperatura" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ph" class="control-label"></label>
                        <input asp-for="Ph" class="form-control" />
                        <span asp-validation-for="Ph" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Oxigenio" class="control-label"></label>
                        <input asp-for="Oxigenio" class="form-control" />
                        <span asp-validation-for="Oxigenio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Turbidez" class="control-label"></label>
                        <input asp-for="Turbidez" class="form-control" />
                        <span asp-validation-for="Turbidez" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
